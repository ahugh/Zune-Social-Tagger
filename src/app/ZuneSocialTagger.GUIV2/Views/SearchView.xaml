<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:views="clr-namespace:ZuneSocialTagger.GUIV2.Views" 
    x:Class="ZuneSocialTagger.GUIV2.Views.SearchView"
	FontFamily="/ZuneSocialTagger.GUIV2;Component/Assets/Fonts/#Zegoe UI - U">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <Binding Source="{StaticResource Locator}" Path="SearchView" />
    </UserControl.DataContext>

    <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <views:SearchHeaderView VerticalAlignment="Top" DataContext="{Binding SearchHeader}" Grid.ColumnSpan="3" />

            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                
                <Button Content="BACK" Margin="0,0,10,0" Command="{Binding MoveBackCommand}"/>

                <Button Content="SEARCH"
                    IsEnabled="{Binding SearchHeader.SearchBar.IsAbleToSearch}" Command="{Binding SearchCommand}"/>
                
            </StackPanel>

        </Grid>
</UserControl>