<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:views="clr-namespace:ZuneSocialTagger.GUIV2.Views" xmlns:cm="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework" x:Class="ZuneSocialTagger.GUIV2.Views.SearchView"
	FontFamily="/ZuneSocialTagger.GUIV2;Component/Assets/Fonts/#Zegoe UI - U">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </UserControl.Resources>
	
	<Grid x:Name="LayoutRoot">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

                <views:WebsiteAlbumMetaDataView VerticalAlignment="Top" DataContext="{Binding AlbumDetailsFromFile}" />
            <views:SearchBarView VerticalAlignment="Top" DataContext="{Binding SearchBar}" Grid.Column="1"  />
                
            <Button Width="60" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Content="Search"
                    IsEnabled="{Binding SearchBar.IsAbleToSearch}" cm:Message.Attach="[Event Click] = [Action Search]"/>
        </Grid>
	</Grid>
</UserControl>