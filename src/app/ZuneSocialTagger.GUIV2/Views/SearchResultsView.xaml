<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:root="clr-namespace:ZuneSocialTagger.GUIV2"
	mc:Ignorable="d"
	xmlns:SampleData="clr-namespace:Expression.Blend.SampleData.SearchResults"
	x:Class="ZuneSocialTagger.GUIV2.Views.SearchResultsView"
	x:Name="UserControl"
	d:DesignWidth="663" Height="400" FontFamily="/ZuneSocialTagger.GUIV2;Component/Assets/Fonts/#Zegoe UI - U">

	<UserControl.Resources>
	<ResourceDictionary Source="../Resources.xaml ">
	</ResourceDictionary>
	</UserControl.Resources>

	<Border x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource SearchResults}}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="40"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			
            <root:WebsiteAlbumMetaDataViewMock VerticalAlignment="Top"/>
			<root:SearchBar VerticalAlignment="Top" Grid.Column="1" />
			<TextBlock Grid.Row="1" Text="ALBUMS (54)" VerticalAlignment="Bottom" FontSize="13.333"/>
			<ListView Style="{DynamicResource ListBoxStyle1}" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="2" ItemsSource="{Binding Collection}" Margin="0,0,36,0" FontFamily="/ZuneSocialTagger.GUIV2;Component/Assets/Fonts/#Zegoe UI - U" ItemContainerStyle="{DynamicResource SelectedItemHighlight}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel Margin="0,5,0,5">
							<TextBlock Text="{Binding Album_Title}" FontSize="13.333"/>
							<TextBlock Text="{Binding Artist}" Foreground="#FF8A8D90" />
						</StackPanel>	
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			
			<StackPanel Grid.Row="2" Grid.Column="1" DataContext="{Binding Source={StaticResource SearchResultsSampleData}}">
				<TextBlock FontSize="21.333" FontFamily="/ZuneSocialTagger.GUIV2;Component/Assets/Fonts/#Zegoe UI Semi Bold - U">Very Proud of Ya</TextBlock>
				<ItemsControl Background="Transparent" ItemsSource="{Binding Collection}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
						<ItemsControl.ItemTemplate>
												<DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="3">
                                            <TextBlock Width="23" Text="{Binding Track_Index}" VerticalAlignment="Center" FontSize="18"/>
                                            <TextBlock Text="{Binding Track_Title}" VerticalAlignment="Center" FontSize="13.333" Margin="10,0,0,0"/>
                                        </StackPanel>
						</DataTemplate>
						</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>