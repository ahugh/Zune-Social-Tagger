<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ZuneSocialTagger.GUIV2.Views.SelectAudioFilesView"
	x:Name="Window">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </UserControl.Resources>
	
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
            <RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
        
		<Grid Grid.Row="1" VerticalAlignment="Top" Height="30">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="0.5*"/>
		</Grid.ColumnDefinitions>
				<Button Command="{Binding FromFolderCommand}" HorizontalAlignment="Right" Width="80">From Folder</Button>
				<Button Command="{Binding FromFilesCommand}" HorizontalAlignment="Left" Width="80" Grid.Column="2">Single Files</Button>
		</Grid>
        
        <TextBlock HorizontalAlignment="Center" Height="30" Text="Select the album you want linking to the zune social" />

	</Grid>
</UserControl>