<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ZuneSocialTagger.GUIV2.Views.SelectAudioFilesView"
	x:Name="Window">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </UserControl.Resources>
	
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
            <RowDefinition />
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>


        
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Height="30" Text="Choose the album you want linking to the zune social" />
        <Button Command="{Binding FromFilesCommand}" HorizontalAlignment="Center" Grid.Row="1" Content="Select Audio Files"/>

    </Grid>
</UserControl>