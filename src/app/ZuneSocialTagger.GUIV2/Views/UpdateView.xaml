<Window x:Class="ZuneSocialTagger.GUIV2.Views.UpdateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ZuneSocialTagger.GUIV2"
    Title="Update" ShowInTaskbar="True" Height="250" Width="500"  Topmost="True" Style="{DynamicResource DefaultWindowStyle}"  >


    <Window.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--HEADER-->
        <StackPanel Grid.Row="0">
            <local:ZuneHeaderGradient/>
            <TextBlock  FontSize="26.667" Text="UPDATE"/>
        </StackPanel>
        
        <TextBlock Grid.Row="1" TextWrapping="Wrap">A new update is available for Zune Social Tagger, it is strongly reccomended that you update now. </TextBlock>
        
        <TextBlock HorizontalAlignment="Center" FontSize="25" VerticalAlignment="Center" Grid.Row="2" Text="Zune Social Tagger v1.2.2" />
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="70" Height="25" Grid.Row="3" Content="Update"></Button>
    </Grid>
</Window>
