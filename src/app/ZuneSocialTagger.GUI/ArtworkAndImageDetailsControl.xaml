<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ZuneSocialTagger.GUI.ArtworkAndImageDetailsControl"
	x:Name="AlbumMetaDataDetails" Height="88">

	<Grid x:Name="LayoutRoot" Height="84">
		<StackPanel Orientation="Horizontal">
			<Image Source="{Binding ArtworkUrl}" Stretch="Fill" Height="84" Width="84"/>
			<Border VerticalAlignment="Top">
				<StackPanel x:Name="AlbumDetails" Margin="10,0,0,0">
					<TextBlock x:Name="Title" Text="{Binding Title}" FontFamily="Assets/Fonts/#Zegoe UI - U" FontSize="13.333" />
					<TextBlock x:Name="Artist" Text="{Binding Artist}" Foreground="#FF8A8D90" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" />
					<TextBlock x:Name="Song_Count" Text="{Binding SongCount}" Foreground="#FF8A8D90" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U"  />
					<TextBlock x:Name="Year" Text="{Binding Year}" Foreground="#FF8A8D90" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U"  />
				</StackPanel>
			</Border>

		</StackPanel>
	</Grid>
</UserControl>