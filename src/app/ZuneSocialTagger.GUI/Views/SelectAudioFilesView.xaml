<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ZuneSocialTagger.GUI.Views.SelectAudioFilesView"
	x:Name="Window"
	Title="SelectAudioFilesView" Height="200"
	Style="{DynamicResource DefaultWindowStyle}" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </Window.Resources>
	
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="25"/>
		<RowDefinition/>
		</Grid.RowDefinitions>
        
		<TextBlock FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="26.667" Text="SELECT AUDIO FILES"/>
		<Grid Grid.Row="2" VerticalAlignment="Top" Height="25">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="0.5*"/>
		</Grid.ColumnDefinitions>
				<Button Command="{Binding FromFolderCommand}" HorizontalAlignment="Right" Width="80">From Folder</Button>
				<Button Command="{Binding FromFilesCommand}" HorizontalAlignment="Left" Width="80" Grid.Column="2">Single Files</Button>
		</Grid>
		<Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Content="Close" Grid.Row="2"/>

	</Grid>
</Window>