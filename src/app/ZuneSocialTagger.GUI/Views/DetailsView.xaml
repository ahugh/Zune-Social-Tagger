<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ZuneSocialTagger.GUI.Views"
    x:Class="ZuneSocialTagger.GUI.Views.DetailsView"
    Title="DetailsView" Height="572" Width="663" 
    MouseLeftButtonDown="Window_MouseLeftButtonDown" Style="{DynamicResource DefaultWindowStyle}">
    
    <Window.Resources>
        <ResourceDictionary Source="../Resources.xaml" />
    </Window.Resources>
	<Canvas Height="500">
	    <TextBlock FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="26.667"><Run Text="FIND ALBUM INFO"/></TextBlock>
		<Border Width="643" Canvas.Top="40">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

                        
				<!--<root:ArtworkAndImageDetailsControl VerticalAlignment="Top"/>-->
				<!--<root:ArtworkAndImageDetailsControl VerticalAlignment="Top"  Grid.Column = "1"/>-->
				<views:WebsiteAlbumMetaDataView VerticalAlignment="Top" DataContext="{Binding WebsiteAlbumMetaDataViewModel}" Grid.Column = "0" />
				<views:WebsiteAlbumMetaDataView VerticalAlignment="Top" DataContext="{Binding WebsiteAlbumMetaDataViewModel}" Grid.Column = "1" />
				<!--<Button Content="{Binding Path= WebsiteAlbumMetaDataViewModel.Count}"></Button>-->
			</Grid>
		</Border>
		<TextBlock FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333" VerticalAlignment="Top" Width="643" Canvas.Top="108"><Run Text="Match song titles for this album"/></TextBlock>
		<Border VerticalAlignment="Bottom" Width="643" Height="315" Canvas.Top="143.5">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="25"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock Text="SONG TITLES IN THIS ALBUM" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe Caps" FontSize="13.333"/>
				<TextBlock Grid.Column="1" Text="AVAILABLE SONG TITILES" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe Caps" FontSize="13.333"/>
				<ListView Background="Transparent" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Songs, Mode=OneWay}" Style="{DynamicResource ListBoxStyle1}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<Grid Height="25" Margin="0,0,0,4" >
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="320" />
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>
								<StackPanel Orientation="Horizontal">
									<TextBlock Width="23" Text="{Binding Number}" VerticalAlignment="Center" FontSize="18"/>
									<TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="10,0,0,0"/>
								</StackPanel>

								<ComboBox IsReadOnly="True" SelectedIndex="0" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="280" VerticalAlignment="Center">
									<ComboBox.ItemTemplate>
										<DataTemplate>
											<StackPanel Height="25" Orientation="Horizontal">
												<TextBlock Width="15" Text="{Binding Number}" VerticalAlignment="Top" FontSize="12" FontWeight="Bold"/>
												<TextBlock Text="{Binding Title}" VerticalAlignment="Top" Margin="10,0,0,0"/>
											</StackPanel>
										</DataTemplate>
									</ComboBox.ItemTemplate>
								</ComboBox>
							</Grid>
						</DataTemplate>
					</ListView.ItemTemplate>
					<ListView.ItemContainerStyle>
						<Style TargetType="{x:Type ListViewItem}">
							<Setter Property="Focusable" Value="False"/>
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True"/>
							</Style.Triggers>
						</Style>
					</ListView.ItemContainerStyle>
				</ListView>

			</Grid>

		</Border>
				
	
			<StackPanel Orientation="Horizontal" Canvas.Top="478.04">
				<TextBox HorizontalAlignment="Left" x:Name="_tbUrl" Width="250" Text="Paste the url to the albums zune.net webpage" MouseDown="_tbUrl_MouseDown"/>
				<Button Command="{Binding DownloadZuneWebpageCommand}" Width="40" CommandParameter="{Binding Text, ElementName=_tbUrl}" Content="Go!"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Grid.Column="1" Canvas.Left="493" Canvas.Top="476.603">
				<Button Width="75" Content="Back" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333" Click="Button_Click"/>
				<Button Width="75" Content="Save" Grid.Column="1" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333"/>

			</StackPanel>




	</Canvas>
 	
</Window>
