<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ZuneSocialTagger_GUI="clr-namespace:ZuneSocialTagger.GUI" x:Class="ZuneSocialTagger.GUI.Views.DetailsView"
    Title="DetailsView" Height="572" Width="663" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
    	<ResourceDictionary>
    		<SolidColorBrush x:Key="ListBorder"/>
    		<Style x:Key="ListBoxStyle1" TargetType="{x:Type ListBox}">
    			<Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
    			<Setter Property="BorderBrush" Value="{StaticResource ListBorder}"/>
    			<Setter Property="BorderThickness" Value="1"/>
    			<Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
    			<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
    			<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    			<Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
    			<Setter Property="VerticalContentAlignment" Value="Center"/>
    			<Setter Property="Template">
    				<Setter.Value>
    					<ControlTemplate TargetType="{x:Type ListBox}">
    						<Border x:Name="Bd" SnapsToDevicePixels="true" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" Padding="1">
    							<ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
    								<ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
    							</ScrollViewer>
    						</Border>
    						<ControlTemplate.Triggers>
    							<Trigger Property="IsEnabled" Value="false">
    								<Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
    							</Trigger>
    							<Trigger Property="IsGrouping" Value="true">
    								<Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
    							</Trigger>
    						</ControlTemplate.Triggers>
    					</ControlTemplate>
    				</Setter.Value>
    			</Setter>
    		</Style>
    	</ResourceDictionary>
    </Window.Resources>

 <Border BorderBrush="#FFF0F0F0" BorderThickness="2">
        <Grid x:Name="LayoutRoot">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFF0F0F0" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel Margin="8,8,8,8" >
                <Border Width="109" Height="8" HorizontalAlignment="Left">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#F89C38" Offset="0"/>
                            <GradientStop Color="#EC1293" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="26.667"><Run Text="FIND ALBUM INFO"/></TextBlock>
                <Border Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ZuneSocialTagger_GUI:ArtworkAndImageDetails VerticalAlignment="Top"/>
                        <ZuneSocialTagger_GUI:ArtworkAndImageDetails VerticalAlignment="Top"  Grid.Column = "1"/>


                        <!--<ps:SketchRectangleUC Style="{DynamicResource Rectangle-Sketch}" Grid.Column="1" Width="100" Height="100" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center"/>-->
                        <!--preview image of album artwork goes here-->
                    </Grid>
                </Border>
                <TextBlock Margin="0,10" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333">Match song titles for this album</TextBlock>
                <Border Height="290">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SONG TITLES IN THIS ALBUM" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe Caps" FontSize="13.333"/>
                        <TextBlock Grid.Column="1" Text="AVAILABLE SONG TITILES" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe Caps" FontSize="13.333"/>
                        <ListView Background="Transparent" Grid.Row="1" Grid.ColumnSpan="2" DataContext="{Binding Source={StaticResource SongTitlesWithNumbers}}" ItemsSource="{Binding Collection, Mode=OneWay}" Style="{DynamicResource ListBoxStyle1}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="25" Margin="0,0,0,4" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="320" />
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="23" Text="{Binding Number}" VerticalAlignment="Center" FontSize="18"/>
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        </StackPanel>

                                        <ComboBox Text="hello" IsReadOnly="True" SelectedIndex="0" ItemsSource="{Binding Collection, Mode=OneWay}" DataContext="{Binding Source={StaticResource SongTitlesWithNumbers}}" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="280" VerticalAlignment="Center">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Height="25" Orientation="Horizontal">
                                                        <TextBlock Width="15" Text="{Binding Number}" VerticalAlignment="Top" FontSize="12" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Title}" VerticalAlignment="Top" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Focusable" Value="False"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True"/>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                    </Grid>

                </Border>

            </StackPanel>
            <Button HorizontalAlignment="Right" Margin="0,0,21,20.035" VerticalAlignment="Bottom" Width="75" Content="Save" Grid.Column="1" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333"/>
            <Button HorizontalAlignment="Right" Margin="0,0,100,20.035" VerticalAlignment="Bottom" Width="75" Content="Back" Grid.Column="1" FontFamily="/ZuneSocialTagger.GUI;Component/Assets/Fonts/#Zegoe UI - U" FontSize="13.333" Click="Button_Click"/>
            <TextBox x:Name="_tbUrl" HorizontalAlignment="Left" Margin="8,0,0,20.035" VerticalAlignment="Bottom" Text="Paste the url to the albums zune.net webpage" MouseDown="_tbUrl_MouseDown"/>
            <Button Command="{Binding DownloadZuneWebpage}" CommandParameter="{Binding Text, ElementName=_tbUrl}" Margin="264.313,0,319.687,20.035" VerticalAlignment="Bottom" Content="Go!"/>
    </Grid>
	</Border>

 	
</Window>
