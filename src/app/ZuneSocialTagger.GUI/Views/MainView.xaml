<Window x:Class="ZuneSocialTagger.GUI.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:ZuneSocialTagger.GUI.Commands"
    Title="Zune Social Tagger" Width="300" Height="100">
    
    <Grid>
        <Border Margin="10">
            <TextBlock>Please select the tracks you wish to tag</TextBlock>

        </Border>
        
        <Border Margin="10">
            <Button Width="110" HorizontalAlignment="Left" VerticalAlignment="Bottom" Command="{Binding GetAlbumInfoCommand}">Load Album Tracks
                <Button.CommandParameter>
                    <Binding ElementName="tbSearch" Path="Text"/>
                </Button.CommandParameter>
            </Button>
        </Border>
    </Grid>

</Window>
